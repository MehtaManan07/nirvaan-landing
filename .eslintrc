{
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "import/no-unresolved": [0],  // For Development
      "indent": [2, 2],
      "linebreak-style": [2, "unix"],
      "quotes": [2, "double"],
      "semi": [2, "always"],
      "no-inline-comments": [0],
      "arrow-body-style": [1],
      "class-methods-use-this": [0],
      "comma-dangle": [0],
      "import/imports-first": [1],
      "jsx-a11y/no-static-element-interactions": [0],
      "max-len": [1],
      "no-underscore-dangle": [0],
      "no-useless-escape": [0],
      "react/forbid-prop-types": [1],
      "react/no-find-dom-node": [0],
      "react/no-string-refs": [0],
      "react/no-unescaped-entities": [0],
      "react/sort-comp": [0],
      "react/prop-types": [1],
      "no-nested-ternary": [0],
      "no-restricted-imports": [
        "error",
        {
          "patterns": []
        }
      ]
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb-base"]
  }